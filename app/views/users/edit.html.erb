<h1>Editing User #<%= @user.id %></h1>


<%= form_tag(user_url(@user), method: 'put') do %>

  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name, @user.name %>
  </div>

  <div>
    <%= label_tag :source_url %><br />
    <%= text_field_tag :source_url, @user.source_url %>
  </div>

  <div>
    <%= label_tag :tsl_class %><br />
    <%= text_field_tag :tsl_class, @user.tsl_class %>
  </div>

  <div>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, @user.email %>
  </div>

  <div>
    <%= label_tag :phone %><br />
    <%= number_field_tag :phone, @user.phone %>
  </div>

  <div>
    <%= label_tag :twitter %><br />
    <%= text_field_tag :twitter, @user.twitter %>
  </div>

  
  <div>
    <%= submit_tag "Update User" %>
  </div>

<% end %>
