<h1 class="span8 offset2">Edit your post below.</h1>


<%= form_tag(post_url(@post), method: 'put', :class => 'clearfix form-horizontal span6 offset2') do %>

  <%= hidden_field_tag :user_id, @post.user_id %>

  <div class="control-group">
    <%= label_tag :location_id, "Location", :class => "control-label" %>
      <div class="controls">
        <%= select_tag :location_id, options_from_collection_for_select(Location.all, :id, :name, @post.location_id) %> <br />
        <%= link_to 'Or add a new location', new_location_url %>
      </div>
  </div>

  <div class="control-group">
    <%= label_tag :status, "Status", :class => "control-label" %>
      <div class="controls">
      <%= select_tag :status, options_for_select(@statuses, @post.status) %>
      </div>
  </div>

  <div class="control-group">
    <%= label_tag :duration, "How long?", :class => "control-label" %>
      <div class="controls">
      <%= select_tag :duration, options_for_select(@durations, @post.duration) %>
    </div>
  </div>

  <div class="control-group">
    <%= label_tag :description, "Description", :class => "control-label" %>
      <div class="controls">
      <%= text_field_tag :description, @post.description %>
    </div>
  </div>

  <%= hidden_field_tag :posted_time, Time.new %>

    <div>
      <button type="submit" class="btn btn-primary span2 offset2">Update Post</button>
    </div>
<% end %>
