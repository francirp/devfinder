<h1>
  <% if current_user %>
    <%= link_to 'Where are you coding?', new_post_url %>
  <% else %>
    <%= link_to 'Sign in Via Portal Here', '/auth/starterleague' %>
  <% end %>
</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Avatar</th>
      <th>Location</th>
      <th>Status</th>
      <th>Duration</th>
      <th>Description</th>
      <th>Posted</th>
    </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.user.name %></td>
      <td><%= image_tag post.user.source_url %></td>
      <td><%= post.location.name %></td>
      <td><%= post.status %></td>
      <td><%= post.duration %></td>
      <td><%= post.description %></td>
      <td><%= distance_of_time_in_words(post.posted_time, to_time = Time.now, include_seconds = false) %> ago</td>

      <td><%= link_to 'Edit', edit_post_url(post) %></td>
      <td><%= link_to 'Delete', post_url(post), method: 'delete', data: { confirm: "Do you really want to delete this post?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

